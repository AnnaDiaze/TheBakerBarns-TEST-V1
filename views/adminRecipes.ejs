<html>
<head>
    <%- include('partials/header1.ejs') %>
</head>
<body>
  <header>
    <h1>The Baker Barns Bakery</h1>
    <%- include('partials/navbar1.ejs') %>
  </header>
      <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 12px;
      border: 1px solid #ccc;
      text-align: center;
    }
    th {
      background: #f4f4f4;
    }
    form {
      margin: 0;
    }
    select {
      padding: 5px;
    }
    button {
      padding: 6px 12px;
      margin-left: 5px;
      background: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background: #45a049;
    }
    .back-link:hover { background: #45a049; }

    .btn-update {
      background: #27ae60;
      color: white;
    }

    .btn-delete {
      background: #e74c3c;
      color: white;
    }
  </style>

</body>

  <!-- Admin Action Bar -->
  <div class="d-flex flex-wrap p-2 bg-light border-bottom">
    <a href="/adminonly" class="btn btn-outline-dark m-1">Admin Panel</a>
    <a href="/admin/Orders" class="btn btn-outline-dark m-1">Manage Orders</a>
    <a href="/admin/Products" class="btn btn-outline-dark m-1">Manage Products</a>
    <a href="/admin/Recipes" class="btn btn-outline-dark m-1">Manage Recipes</a>
    <a href="/admin/Users" class="btn btn-outline-dark m-1">Manage Users</a>
  </div>

<h2>Manage Recipes</h2>

<form action="/admin/Recipes/add" method="POST">
  <input type="text" name="title" placeholder="Title" required>
  <textarea name="description" placeholder="Description"></textarea>
  <textarea name="ingredients" placeholder="Ingredients (one per line)"></textarea>
  <textarea name="method" placeholder="Method (one step per line)"></textarea>
  <input type="text" name="image" placeholder="Image URL" >
  <!-- <input type="text" name="category" placeholder="Categories (comma separated)"> -->
  <button type="submit" class="btn btn-update">Add Recipe</button>
</form>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Ingredients</th>
      <th>Method</th>
      <th>Image</th>
      <!-- <th>Category</th> -->
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(r => { %>
      <tr>
        <td><%= r.title %></td>
        <td><%= r.description %></td>
        <td><%= r.ingredients %></td>
        <td><%= r.method %></td>
        <!-- <td><%= r.category %></td> -->
        <td><img src="<%= r.image %>" width="80"></td>
        <td>
          <a href="/admin/Recipes/update/<%= r.id %>" class="btn btn-update">Update</a>
          <a href="/admin/Recipes/delete/<%= r.id %>" class="btn btn-update">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
</html>