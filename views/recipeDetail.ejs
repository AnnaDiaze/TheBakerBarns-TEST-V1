<html>
<head>
    <%- include('partials/header1.ejs') %>
</head>
<body>
  <header>
    <h1>The Baker Barns Bakery</h1>
    <%- include('partials/navbar1.ejs') %>
  </header>
</body>

<div class="container">
<div class="recipe-detail">
  <div class="recipe-header">
    <h1><%= recipe.title %></h1>
    <img src="<%= recipe.image %>" alt="<%= recipe.title %>">
    
    <div class="buttons">
      <button onclick="window.print()" class="btn btn-primary">Print Recipe</button>
    </div>
  </div>

  <div class="recipe-body">
    <div class="ingredients">
      <h2>Ingredients</h2>
      <ul>
        <% recipe.ingredients.split('\n').forEach(item => { %>
          <li><%= item %></li>
        <% }) %>
      </ul>
    </div>

    <div class="method">
      <h2>Method</h2>
      <ol>
        <% recipe.method.split('\n').forEach(step => { %>
          <li><%= step %></li>
        <% }) %>
      </ol>
    </div>
  </div>
</div>
<a href="/recipes" class="btn btn-primary">‚Üê Back to Recipes</a>
</div>

<footer>
    <p>&copy; 2025 The Baker Barns Bakery</p>
  </footer>
</html>