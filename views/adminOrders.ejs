<!DOCTYPE html>
<html>
<head>
    <%- include('partials/header1.ejs') %>
  <title>Admin - Orders</title>
</head>
<body>
    <header>
    <h1>The Baker Barns Bakery</h1>
    <%- include('partials/navbar1.ejs') %>
  </header>
  
    <!-- Admin Action Bar -->
  <div class="d-flex flex-wrap p-2 bg-light border-bottom">
    <a href="/adminonly" class="btn btn-outline-dark m-1">Admin Panel</a>
    <a href="/admin/Orders" class="btn btn-outline-dark m-1">Manage Orders</a>
    <a href="/admin/Products" class="btn btn-outline-dark m-1">Manage Products</a>
    <a href="/admin/Recipes" class="btn btn-outline-dark m-1">Manage Recipes</a>
    <a href="/admin/Users" class="btn btn-outline-dark m-1">Manage Users</a>
  </div>
  
  <h1>Manage Orders</h1>

  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Pickup Date</th>
        <th>Total</th>
        <th>Status</th>
        <th>Update</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.customer_name %></td>
          <td><%= order.email %></td>
          <td><%= order.phone %></td>
          <td><%= order.pickup_date.toISOString().split('T')[0] %></td>
          <td>$<%= parseFloat(order.total_amount || 0).toFixed(2) %></td>
          <td><%= order.status %></td>
          <td>
            <form action="/admin/orders/update/<%= order.id %>" method="POST" style="display:inline;">
                <select name="status">
                    <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                    <option value="paid" <%= order.status === 'paid' ? 'selected' : '' %>>Paid</option>
                    <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
                    <button type="submit" class="btn btn-update">Save</button>
            </form>
            <a href="/admin/orders/<%= order.id %>">View Details</a>
            </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/adminOnly" class="btn btn-update">← Back </a>

  <footer>
    <p>&copy; 2025 The Baker Barns Bakery</p>
  </footer>
</body>
</html>