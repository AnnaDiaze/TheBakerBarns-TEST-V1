        <% quotes.forEach(q => { %>
          <div class="card"><div class="pad"><p class="quote">‚Äú<%= q.text %>‚Äù</p><div style="font-weight:600">‚Äî <%= q.name %></div></div></div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- FOOTER (full width) -->
  <footer>
    <div>
      <div>¬© 2025 The Baker Barns Bakery</div>
