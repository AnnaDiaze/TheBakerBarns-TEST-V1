<html>
<head>
  <%- include('partials/header1.ejs') %>
  <style>
    :root{--bb-accent:#ff4d6d;--bb-cream:#fff3f6;--bb-dark:#111}
    /* Full‚Äëwidth layout helpers */
    body{margin:0}
    header,footer,section{width:100%}
    .bb-shell{padding:0 5vw} /* gentle side gutters so content "breathes" while staying full width */

    /* Header + Footer keep your existing partials, just styled to span */
    header.bb{border-bottom:1px solid #eee}
    footer.bb{border-top:1px solid #eee;color:#888}

    /* Hero goes truly edge‚Äëto‚Äëedge */
    .hero{position:relative;min-height:70vh;display:flex;align-items:center;color:#fff;overflow:hidden}
    .hero-bg{position:absolute;inset:0;background:#111 url('/images/home/hero.jpg') center/cover no-repeat}
    .hero::after{content:"";position:absolute;inset:0;background:linear-gradient(180deg,rgba(0,0,0,.35),rgba(0,0,0,.55))}
    .hero .content{position:relative;z-index:2}
    .bb-badge{display:inline-block;background:var(--bb-accent);color:#fff;border-radius:999px;padding:.45rem .85rem;font-size:.9rem}
    .btn{display:inline-block;padding:.8rem 1.2rem;border-radius:.6rem;border:1px solid #fff;background:#fff;color:#000;text-decoration:none;font-weight:600}
    .btn.outline{background:transparent;color:#fff}

    /* Sections */
    .bb-section{padding:4rem 0}
    h1,h2,h3{margin:0 0 .6rem}
    p{margin:.25rem 0 1rem}

    /* Card grid (no Bootstrap needed) */
    .grid{display:grid;gap:1rem}
    .grid.cols-3{grid-template-columns:repeat(3,minmax(0,1fr))}
    .grid.cols-4{grid-template-columns:repeat(4,minmax(0,1fr))}
    @media (max-width:1200px){.grid.cols-4{grid-template-columns:repeat(3,1fr)}}
    @media (max-width:900px){.grid.cols-3,.grid.cols-4{grid-template-columns:repeat(2,1fr)}}
    @media (max-width:560px){.grid.cols-3,.grid.cols-4{grid-template-columns:1fr}}

    .card{border:1px solid #eee;border-radius:1rem;overflow:hidden;background:#fff;box-shadow:0 6px 18px rgba(0,0,0,.05)}
    .card img{width:100%;height:240px;object-fit:cover}
    .card .pad{padding:1rem}
    .price{font-weight:700}

    .bb-why{background:var(--bb-cream)}
    .why-item{background:#fff;border:1px solid #eee;border-radius:1rem;padding:1rem;display:flex;gap:.75rem;align-items:flex-start}
    .why-ico{font-size:1.5rem}

    .cta{background:linear-gradient(135deg,var(--bb-accent),#ff8fab);border-radius:1.25rem;color:#fff}
    .cta .btn{border:0}

    .quote{font-style:italic}
  </style>
</head>
<body>
  <!-- HEADER (full width) -->
  <header>
    <div>
      <a><h1>The Baker Barns Bakery</h1></a>
      <%- include('partials/navbar1.ejs') %>
    </div>
  </header>

  <!-- HERO (edge to edge) -->
  <section class="hero">
    <div class="hero-bg"></div>
    <div class="bb-shell content">
      <span class="bb-badge">Baked fresh daily</span>
      <h1 style="font-size:clamp(2rem,5vw,3.2rem);margin-top:.75rem">Cakes that make every moment sweet</h1>
      <p style="max-width:60ch">Order customer favourites or design your own custom cake in minutes.</p>
      <div style="display:flex;gap:.75rem;flex-wrap:wrap">
