          {title:'Red Velvet', img:'/images/home/red-velvet.jpg', price:'$65', href:'/products?search=red%20velvet'},
          {title:'Ribbon Pound', img:'/images/home/ribbon.jpg', price:'$35', href:'/products?search=ribbon'},
          {title:'Black Forest', img:'/images/home/black-forest.jpg', price:'$55', href:'/products?search=black%20forest'},
          {title:'Lemon Drizzle', img:'/images/home/lemon.jpg', price:'$35', href:'/products?search=lemon'},
          {title:'Vanilla Dream', img:'/images/home/vanilla.jpg', price:'$45', href:'/products?search=vanilla'},
          {title:'Caramel Crunch', img:'/images/home/caramel.jpg', price:'$55', href:'/products?search=caramel'},
          {title:'Tiramisu', img:'/images/home/tiramisu.jpg', price:'$65', href:'/products?search=tiramisu'}
