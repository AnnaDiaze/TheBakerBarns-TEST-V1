<html>
<head>
  <%- include('partials/header1.ejs') %>
</head>
<body>
  <header>
    <h1>The Baker Barns Bakery</h1>
    <%- include('partials/navbar1.ejs') %>
  </header>

  <!-- Admin Action Bar -->
  <div class="d-flex flex-wrap p-2 bg-light border-bottom">
    <a href="/adminonly" class="btn btn-outline-dark m-1">Admin Panel</a>
    <a href="/admin/Orders" class="btn btn-outline-dark m-1">Manage Orders</a>
    <a href="/admin/Products" class="btn btn-outline-dark m-1">Manage Products</a>
    <a href="/admin/Recipes" class="btn btn-outline-dark m-1">Manage Recipes</a>
    <a href="/admin/Users" class="btn btn-outline-dark m-1">Manage Users</a>
  </div>

  <h1>Manage Products</h1>

  <!-- Add new product -->
  <form action="/admin/products/add" method="POST">
    <input type="text" name="name" placeholder="Product Name" required />
    <textarea name="description" placeholder="Description"></textarea>
    <input type="number" name="price" placeholder="Price" step="0.01" min="0" required />
    <input type="number" name="stock" placeholder="Stock" min="0" required />

    <select name="category_id" required>
      <% categories.forEach(cat => { %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% }) %>
    </select>

    <button type="submit" class="btn btn-update">Add Product</button>
  </form>

  <hr>

  <!-- List existing products -->
  <h3>Active Products</h3>
  <table>
    <tr>
      <th>Name</th><th>Description</th><th>Price</th><th>Stock</th><th>Category</th><th>Update</th><th>Archive</th>
    </tr>
    <% products.forEach(product => { %>
      <tr>
        <form action="/admin/products/update/<%= product.id %>" method="POST">
          <td><input type="text" name="name" value="<%= product.name %>"></td>
          <td><textarea name="description"><%= product.description %></textarea></td>
          <td><input type="number" name="price" value="<%= product.price %>" step="0.01" min="0"></td>
          <td><input type="number" name="stock" value="<%= product.stock %>"></td>
          <td>
            <select name="category_id" required>
              <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>" <%= cat.id === product.category_id ? 'selected' : '' %>>
                  <%= cat.name %>
                </option>
              <% }) %>
            </select>
          </td>
          <td><button type="submit" class="btn btn-update">Update</button></td>
        </form>
        <form action="/admin/products/archive/<%= product.id %>" method="POST" style="display:inline;">
          <td><button type="submit" class="btn btn-delete">Archive</button></td>
        </form>
      </tr>
    <% }) %>
  </table>

  <hr>
  <h3>Archived Products</h3>
  <table>
    <tr>
      <th>Name</th><th>Description</th><th>Price</th><th>Stock</th><th>Category</th><th>Actions</th>
    </tr>
    <% archivedProducts.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= product.category_id %></td>
        <td>
          <form action="/admin/products/restore/<%= product.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-update">Restore</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </table>



  <a href="/adminOnly" class="btn btn-update">‚Üê Back </a>

  <footer>
    <p>&copy; 2025 The Baker Barns Bakery</p>
  </footer>
</body>
</html>