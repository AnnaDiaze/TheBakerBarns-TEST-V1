<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header1.ejs') %>
  <title>Admin – Manage Products</title>
  <style>
    /* Small page-local helpers (optional: move to styles.css) */
    .admin-actionbar {
      padding:12px 16px; margin-top:24px;
      display:flex; flex-wrap:wrap; gap:8px;
    }
    .card {
      background:#fff; border-radius:12px; padding:16px;
      box-shadow:0 4px 12px rgba(0,0,0,.08);
      margin-bottom:18px;
    }
    .form-grid {
      display:grid; gap:12px;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      align-items:flex-start;
    }
    .form-grid textarea { grid-column: 1 / -1; min-height: 90px; }
    .table-actions { display:flex; gap:8px; justify-content:center; flex-wrap:wrap; }
    .input, .select, .textarea {
      width:100%; padding:10px; border:1px solid #ddd; border-radius:8px;
    }
    .help { display:block; font-size:12px; color:#666; margin-top:4px; }
    .file-input { display:block; width:100%; }
  </style>
</head>
<body>
  <header>
    <h1>The Baker Barns Bakery</h1>
    <%- include('partials/navbar1.ejs') %>
  </header>

  <!-- Admin nav -->
  <nav class="cart-container cart-container--wide admin-actionbar">
    <a class="btn btn-accent"  href="/adminOnly">Admin Panel</a>
    <a class="btn btn-primary" href="/admin/Orders">Manage Orders</a>
    <a class="btn btn-primary" href="/admin/Products">Manage Products</a>
    <a class="btn btn-primary" href="/admin/Recipes">Manage Recipes</a>
    <a class="btn btn-primary" href="/admin/Users">Manage Users</a>
  </nav>

  <main class="cart-container cart-container--wide">
    <h2 style="text-align:left; margin:0 0 16px;">Manage Products</h2>

    <!-- Add Product -->
    <section class="card">
      <h3 style="margin-top:0;">Add New Product</h3>
      <!-- multipart for file upload -->
      <form action="/admin/Products/add" method="POST" class="form-grid" enctype="multipart/form-data">
        <div>
          <label>Name</label>
          <input class="input" type="text" name="name" placeholder="Product Name" required />
        </div>

        <div>
          <label>Price</label>
          <input class="input" type="number" name="price" placeholder="0.00" step="0.01" min="0" required />
        </div>

        <div>
          <label>Stock</label>
          <input class="input" type="number" name="stock" placeholder="0" min="0" required />
        </div>

        <div>
          <label>Category</label>
          <select class="select" name="category_id" required>
            <% categories.forEach(cat => { %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
            <% }) %>
          </select>
        </div>

        <div>
          <label>Product Image (optional)</label>
          <input class="file-input" type="file" name="image_file" accept="image/*">
        </div>

        <div style="grid-column:1/-1;">
          <label>Description</label>
          <textarea class="textarea" name="description" placeholder="Short description…"></textarea>
        </div>

        <div style="grid-column:1/-1; display:flex; justify-content:flex-end; gap:10px;">
          <button type="submit" class="btn btn-primary">Add Product</button>
        </div>
      </form>
    </section>

    <!-- Active Products -->
    <section class="card">
      <h3 style="margin-top:0;">Active Products</h3>

      <div class="table-responsive">
        <table class="cart-table cart-table--outlined admin-products-table">
          <thead>
            <tr>
              <th style="min-width:160px;">Name</th>
              <th>Description</th>
              <th style="min-width:120px;">Price</th>
              <th style="min-width:100px;">Stock</th>
              <th style="min-width:160px;">Category</th>
              <th style="min-width:180px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { 
                 const formId = `form-${product.id}`;
            %>
              <!-- Hidden form that collects all inputs in this row -->
              <form id="<%= formId %>" action="/admin/Products/update/<%= product.id %>" method="POST" enctype="multipart/form-data" style="display:none;"></form>

              <tr>
                <!-- NAME -->
                <td style="text-align:left;">
                  <input class="input" type="text" name="name" form="<%= formId %>" value="<%= product.name %>" required>
                </td>

                <!-- DESCRIPTION -->
                <td style="text-align:left; max-width:420px;">
                  <textarea class="textarea" name="description" form="<%= formId %>"><%= product.description %></textarea>
                </td>

                <!-- PRICE -->
                <td>
                  <input class="input" type="number" name="price" form="<%= formId %>"
                         value="<%= Number(product.price || 0).toFixed(2) %>" step="0.01" min="0" required>
                </td>

                <!-- STOCK -->
                <td>
                  <input class="input" type="number" name="stock" form="<%= formId %>"
                         value="<%= product.stock %>" min="0" required>
                </td>

                <!-- CATEGORY -->
                <td>
                  <select class="select" name="category_id" form="<%= formId %>" required>
                    <% categories.forEach(cat => { %>
                      <option value="<%= cat.id %>" <%= cat.id === product.category_id ? 'selected' : '' %>><%= cat.name %></option>
                    <% }) %>
                  </select>
                </td>

                <!-- ACTIONS -->
                <td>
                  <div class="table-actions">
                    <button type="submit" class="btn btn-primary btn-sm" form="<%= formId %>">Save</button>
                    <form action="/admin/Products/archive/<%= product.id %>" method="POST" class="inline-form">
                      <button type="submit" class="btn btn-accent btn-sm">Archive</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Archived Products -->
    <section class="card">
      <h3 style="margin-top:0;">Archived Products</h3>

      <div class="table-responsive">
        <table class="cart-table cart-table--outlined">
          <thead>
            <tr>
              <th style="min-width:160px;">Name</th>
              <th>Description</th>
              <th style="min-width:120px;">Price</th>
              <th style="min-width:100px;">Stock</th>
              <th style="min-width:160px;">Category</th>
              <th style="min-width:140px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% archivedProducts.forEach(product => { 
                 const cat = categories.find(c => c.id === product.category_id);
            %>
              <tr>
                <td style="text-align:left;"><%= product.name %></td>
                <td style="text-align:left; max-width:520px;"><%= product.description %></td>
                <td>$<%= Number(product.price||0).toFixed(2) %></td>
                <td><%= product.stock %></td>
                <td><%= cat ? cat.name : ('ID ' + product.category_id) %></td>
                <td>
                  <div class="table-actions">
                    <form action="/admin/Products/restore/<%= product.id %>" method="POST" class="inline-form">
                      <button type="submit" class="btn btn-primary btn-sm">Restore</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <div style="margin-top:8px;">
      <a href="/adminOnly" class="btn btn-primary">← Back</a>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 The Baker Barns Bakery</p>
  </footer>
</body>
</html>
