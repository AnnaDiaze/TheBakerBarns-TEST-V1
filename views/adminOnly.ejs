<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header1.ejs') %>
  <title>Admin Panel</title>
  <style>
    /* Page-local helpers (you can move these to styles.css if you prefer) */
    .admin-actionbar { padding:12px 16px; margin-top:24px; display:flex; flex-wrap:wrap; gap:8px; }
    .card { background:#fff; border-radius:12px; padding:16px; box-shadow:0 4px 12px rgba(0,0,0,.08); }
    .admin-hero {
      background: var(--brand-rose, #ffe4e1);
      border-radius: 12px;
      padding: 22px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      margin-bottom: 18px;
    }
    .admin-hero h2 { margin: 0 0 6px; color:#c0392b; }
    .admin-grid {
      display:grid;
      grid-template-columns: repeat(4, 1fr);
      gap:16px;
    }
    @media (max-width: 1100px) {
      .admin-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @media (max-width: 640px) {
      .admin-grid { grid-template-columns: 1fr; }
    }
    .tile {
      display:flex; flex-direction:column; gap:10px;
      border:1px solid #f2d2da; /* soft outline to match tables */
    }
    .tile h3 { margin:0; font-size:18px; }
    .tile p { margin:0; color:#555; line-height:1.5; }
    .tile .tile-footer { margin-top:auto; display:flex; gap:8px; flex-wrap:wrap; }
    .soft { color:#666; font-size:14px; }
  </style>
</head>
<body>
  <!-- Top navbar -->
  <header>
    <h1>The Baker Barns Bakery</h1>
    <%- include('partials/navbar1.ejs') %>
  </header>

  <!-- Admin nav pills -->
  <nav class="cart-container cart-container--wide admin-actionbar">
    <a class="btn btn-accent"  href="/adminOnly">Admin Panel</a>
    <a class="btn btn-primary" href="/admin/Orders">Manage Orders</a>
    <a class="btn btn-primary" href="/admin/Products">Manage Products</a>
    <a class="btn btn-primary" href="/admin/Recipes">Manage Recipes</a>
    <a class="btn btn-primary" href="/admin/Users">Manage Users</a>
  </nav>

  <main class="cart-container cart-container--wide">
    <!-- Welcome / hero -->
    <section class="admin-hero card">
      <div>
        <h2>Welcome<% if (typeof username !== 'undefined' && username) { %>, <%= username %><% } %>!</h2>
        <div class="soft">Use the quick actions below to jump into common admin tasks.</div>
      </div>
      <div>
        <a href="/admin/Orders" class="btn btn-primary">View Orders</a>
      </div>
    </section>

    <!-- Dashboard tiles -->
    <section class="admin-grid">
      <!-- Orders -->
      <article class="card tile">
        <h3>üì¶ Manage Orders</h3>
        <p>Review new orders, update statuses, and view item details for pickup.</p>
        <div class="tile-footer">
          <a href="/admin/Orders" class="btn btn-primary">Open Orders</a>
        </div>
      </article>

      <!-- Products -->
      <article class="card tile">
        <h3>üßÅ Manage Products</h3>
        <p>Add new items, edit descriptions/prices/stock, or archive/restore products.</p>
        <div class="tile-footer">
          <a href="/admin/Products" class="btn btn-primary">Open Products</a>
        </div>
      </article>

      <!-- Recipes -->
      <article class="card tile">
        <h3>üìñ Manage Recipes</h3>
        <p>Maintain recipe content for your site: titles, ingredients, methods and images.</p>
        <div class="tile-footer">
          <a href="/admin/Recipes" class="btn btn-primary">Open Recipes</a>
        </div>
      </article>

      <!-- Users -->
      <article class="card tile">
        <h3>üë§ Manage Users</h3>
        <p>Update user profiles and roles, block/unblock users, or remove accounts.</p>
        <div class="tile-footer">
          <a href="/admin/Users" class="btn btn-primary">Open Users</a>
        </div>
      </article>
    </section>

    <!-- Optional quick links -->
    <section class="card" style="margin-top:16px;">
      <h3 style="margin-top:0;">Quick Links</h3>
      <ul style="margin:8px 0 0 18px;">
        <li><a href="/admin/Orders">Latest orders</a></li>
        <li><a href="/admin/Products">Low stock items</a></li>
        <li><a href="/admin/Recipes">Add a new recipe</a></li>
        <li><a href="/admin/Users">Invite or update a staff account</a></li>
      </ul>
    </section>
  </main>

  <footer>
    <p>&copy; 2025 The Baker Barns Bakery</p>
  </footer>
</body>
</html>
