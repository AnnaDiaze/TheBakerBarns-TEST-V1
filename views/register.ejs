<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header1.ejs') %>
  <title>Register</title>
  <style>
    .alert-error {
      background: #fde8ea;
      color: #a61b2b;
      border: 1px solid #f5c2c7;
      padding: 12px 14px;
      border-radius: 8px;
      margin: 10px auto 16px;
      max-width: 420px;
      text-align: center;
      font-weight: 600;
    }

    .register-box {
      background: #fff;
      padding: 24px;
      border-radius: 12px;
      box-shadow: 0 4px 12px rgba(0,0,0,.08);
      max-width: 420px;
      margin: 30px auto;
    }

    .register-box h2 {
      margin-top: 0;
      text-align: center;
      color: #d2691e;
    }

    .register-box label {
      display: block;
      margin: 8px 0 4px;
    }

    .register-box input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    .register-actions {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 12px;
    }
  </style>
</head>

<body>
  <header>
    <h1>The Baker Barns Bakery</h1>
    <%- include('partials/navbar1.ejs') %>
  </header>

  <main>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert-error"><%= error %></div>
    <% } %>

    <div class="register-box">
      <h2>Create Account</h2>
      <form method="POST" action="/register">
        <label>Full Name</label>
        <input type="text" name="username" value="<%= (form && form.username) || '' %>" required>

        <label>Email</label>
        <input type="email" name="email" value="<%= (form && form.email) || '' %>" required>

        <label>Phone</label>
        <input type="text" name="phone" value="<%= (form && form.phone) || '' %>">

        <label>Password</label>
        <input type="password" name="password" required>

        <div class="register-actions">
          <a href="/login" class="btn btn-accent">Back to Login</a>
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 The Baker Barns Bakery</p>
  </footer>
</body>
</html>
