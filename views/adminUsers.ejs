<!DOCTYPE html>
<html>
<head>
    <%- include('partials/header1.ejs') %>
</head>
<body>
  <header>
    <h1>The Baker Barns Bakery</h1>
   <%- include('partials/navbar1.ejs') %>
  </header>
    <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 12px;
      border: 1px solid #ccc;
      text-align: center;
    }
    th {
      background: #f4f4f4;
    }
    form {
      margin: 0;
    }
    select {
      padding: 5px;
    }
    button {
      padding: 6px 12px;
      margin-left: 5px;
      background: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background: #45a049;
    }
    .back-link:hover { background: #45a049; }

    .btn-update {
      background: #27ae60;
      color: white;
    }

    .btn-delete {
      background: #e74c3c;
      color: white;
    }
  </style>

</body>

  <!-- Admin Action Bar -->
  <div class="d-flex flex-wrap p-2 bg-light border-bottom">
    <a href="/adminonly" class="btn btn-outline-dark m-1">Admin Panel</a>
    <a href="/admin/Orders" class="btn btn-outline-dark m-1">Manage Orders</a>
    <a href="/admin/Products" class="btn btn-outline-dark m-1">Manage Products</a>
    <a href="/admin/Recipes" class="btn btn-outline-dark m-1">Manage Recipes</a>
    <a href="/admin/Users" class="btn btn-outline-dark m-1">Manage Users</a>
  </div>
  <body>

<h2>Manage Users</h2>

<table>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Role</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(r => { %>
      <tr>
        <form action="/admin/Users/update/<%= r.user_id %>" method="POST">
          <td><input type="text" name="username" value="<%= r.user_name %>" required></td>
          <td><input type="email" name="email" value="<%= r.email %>" required></td>
          <td><input type="text" name="phone" value="<%= r.phone %>" required></td>
          <td>
            <select name="role" required>
              <option value="admin" <%= r.role === 'admin' ? 'selected' : '' %>>Admin</option>
              <option value="customer" <%= r.role === 'customer' ? 'selected' : '' %>>Customer</option>
              <option value="baker" <%= r.role === 'baker' ? 'selected' : '' %>>Baker</option>
              <option value="manager" <%= r.role === 'manager' ? 'selected' : '' %>>Manager</option>
            </select>
          </td>
          <td><button type="submit" class="btn btn-update">Update</button></td>
          <td><a href="/admin/Users/delete/<%= r.user_id %>" class="btn btn-delete">Delete</a></td>
        </form>
      </tr>
    <% }) %>
  </tbody>
</table>
</body>
</html>