  <!-- Page-specific helpers. If you prefer a single stylesheet, move these rules to /public/css/style.css -->
  <style>
    :root { --bb-dark:#1f1f1f; --bb-accent:#ff4d6d; --bb-cream:#fff3f6; }
    .hero {
      position: relative; min-height: 70vh; display:flex; align-items:center; justify-content:center;
      text-align:center; color:#fff; overflow:hidden; border-radius:1.5rem; margin:1.25rem auto;
