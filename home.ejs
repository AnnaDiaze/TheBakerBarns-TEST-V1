    .hero h1{font-weight:800; letter-spacing:.5px;}
    .bb-badge{background:var(--bb-accent); color:#fff; border-radius:999px; padding:.4rem .85rem; font-size:.9rem;}
    .bb-section{padding:3.5rem 0;}
    .bb-card{border:0; border-radius:1rem; overflow:hidden; box-shadow:0 8px 24px rgba(0,0,0,.08); height:100%;}
    .bb-card img{width:100%; height:220px; object-fit:cover;}
    .bb-card .price{font-weight:700;}
    .bb-why{background:var(--bb-cream);} 
    .bb-why .icon{font-size:2rem;}
    .bb-cta{background: linear-gradient(135deg, var(--bb-accent), #ff8fab); color:#fff; border-radius:1.25rem;}
    .bb-cta a.btn{background:#fff; color:#000; border:0;}
    .bb-quote{font-style:italic;}
    .bb-footer{color:#999;}
  </style>
</head>
